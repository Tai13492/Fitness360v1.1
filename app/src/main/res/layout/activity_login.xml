<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.fitness360.LoginActivity">


    <VideoView
        android:id="@+id/videoView"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="223dp"
        android:layout_height="192dp"
        android:layout_marginTop="69dp"
        app:srcCompat="@drawable/fitness_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twitter_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="94dp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/twitter_login_button"
        android:layout_alignStart="@+id/twitter_login_button"
        android:layout_below="@+id/twitter_login_button"
        android:layout_marginTop="28dp" />

    <Button
        android:id="@+id/GuestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/facebook_login_button"
        android:layout_below="@+id/facebook_login_button"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="21dp"
        android:backgroundTint="@color/colorAccent"
        android:breakStrategy="high_quality"
        android:text="Proceed as guest"
        android:textColor="@color/tw__composer_blue" />

</RelativeLayout>
